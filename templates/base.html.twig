{# la variable twig "route" contiendra le nom de la route actuelllement chargéé (pour le menu) #}
{% set route = app.request.attributes.get('_route') %}
<!Doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {# Affichage du titre de la page venant de la vue, suivi du nom du site #}
    <title>{% block title %}{% endblock %} - Le magasin EDEN</title>
    {# Inclusion Font Awesome#}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    {# Inclusion CSS Bootstrap#}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {# Inclusion Styles CSS perso #}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {# Bloc pour ajouter des fichiers css additionnels #}
    {% block css %}{% endblock %}
</head>
<body>

    {# Inclusion du menu principal du site #}
    {% include "partials/_main_navbar.html.twig" %}

    {# Block pour afficher le contenu des pages#}
    {% block body %}{% endblock %}

    {# inclusion du pied de page du site #}
    {% include 'partials/_footer.html.twig' %}

    {# inclusion JS Bootstrap #}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    {# Block pour ajouter des fichiers JS additionnels #}
    {% block js %}{% endblock %}
</body>
</html>
