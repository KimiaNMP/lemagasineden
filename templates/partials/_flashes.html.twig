{# S'il y a des messages flashes de types "success" ou "error"  #}
{% if app.session.flashBag.has('success') or app.session.flashBag.has('error') %}

    <div class="container">
        <div class="row"

            {# Affichage des messages flashes de types "success" #}>
            {% for message in app.flashes('success') %}

                <div class="col-12 alert-success alert-dismissible fade show text-center my-3 fw-bold" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            {% endfor %}


            {# Affichage des messages flashes de types "error" #}>
            {% for message in app.flashes('error') %}

                <div class="col-12 alert-danger alert-dismissible fade show text-center my-3 fw-bold" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            {% endfor %}

        </div>
    </div>

{% endif %}