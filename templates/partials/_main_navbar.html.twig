{# menu principal du site #}
<nav class="navbar navbar-expand-lg navbar-light bg-light main-navbar">
    <div class="container-fluid">

        {# Logo et titre du site #}
        <a class="navbar-brand" href=""{{ path('main_home') }}>
            <img class="img-fluid main-navbar-logo" src="{{ asset('Images/logo-Eden-le-magasin.png') }}" alt="" width="80" height="20">EDEN
        </a>

        {# Le bouton burger#}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="mainNavbarContent" aria-expanded="false" aria-label="Afficher la navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        {# Conteneur principal des boutons #}
        <div class="collapse navbar-collapse" id="mainNavbarContent">

            {# Paquet des boutons à gauche #}
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                {# Lien de la page d'accueil #}
                <li class="nav-item">
                <a href="{{ path('main_home') }}" class="nav-link{{ route == 'main_home' ? ' active' }}"><i class="fa-solid fa-house mx-1"></i>Accueil</a>
                </li>
            </ul>

            {# Formulaire de recherche produits #}
             <form class="d-flex">
                 <input name="s" class="form-control me-2" type="search" placeholder="Recherchez sur EDEN" aria-label="Search">
                 <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </form>

            {# Paquet des boutons à droite #}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                {# Affichage des liens réservés aux utilisateurs connectés #}
                {% if app.user.userIdentifier %}

                    {# Menu déroulant #}
                    <li class="nav-item dropdown">

                        {# Texte du bouton du menu déroulant #}
                        <a class="nav-link dropdown-toggle text-light" href="#" id="profil-dropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            {# Affichage du nom de l'utilisateur connecté #}
                            <i class="fas fa-user mx-1"></i>{{ app.user.userIdentifier }}
                        </a>

                        {# Liste des liens du menu déroulant #}
                        <div class="dropdown-menu" aria-labelledby="profil-dropdown">

                            {# Lien de la page mon profil #}
                            <a class="dropdown-item" href="{{ path('main_profil') }}"><i class="fas fa-users-cog me-1"></i>Mon Profil</a>

                            {# Séparateur #}
                            <div class="dropdown-divider"></div>

                            {# Lien de la page de déconnexion #}
                            <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-1"></i>Déconnexion</a>

                        </div>

                    </li>

                {# Affichage des liens reservés aux utilisateurs non connectés #}
                {% else %}

                    {# Lien de la page d'inscription #}
                    <li class="nav-item">
                        <a href="{{ path('app_register') }}" class="nav-link{{ route == 'app_register' ? ' active' }}"><i class="fa-solid fa-user-plus mx-1"></i>Inscription
                        </a>
                    </li>

                    {# Lien de la page de connexion #}
                    <li class="nav-item">
                        <a href="{{ path('app_login') }}" class="nav-link{{ route == 'app_login' ? ' active' }}"><i class="fa-solid fa-right-to-bracket mx-1"></i>Connexion
                        </a>
                    </li>

                {% endif %}


                {# Lien de la page mon panier #}
                <li class="nav-item">
                    <a class="nav-link" href="#">Mon Panier<i class="fa-solid fa-cart-shopping"></i></a>
                </li>
            </ul>
        </div>

    </div>

</nav>