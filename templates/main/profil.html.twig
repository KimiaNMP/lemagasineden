{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Mon profil{% endblock %}


{# Contenu de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        {# Titre h1 #}
        <div class="row">
            <h1 class="col-12 text-center my-5">Mon profil</h1>
        </div>

        <div class="row">
            <div class="col-12 col-md-10 mx-auto">
                <div class="row">

                    {# Infos profil #}
                    <div class="col-12 text-center my-5 bg-dark d-flex justify-content-center align-items-center">
                        <ul class="list-group col-12 col-md-8 p-0">
                            <li class="list-group-item bg-black text-white">Nom: <span class="text-info">{{ app.user.userIdentifier.name }}</span></li>
                            <li class="list-group-item bg-black text-white">Prénom: <span class="text-info">{{ app.user.userIdentifier.firstName }}</span></li>
                            <li class="list-group-item bg-black text-white">Adresse: <span class="text-info">{{ app.user.userIdentifier.address }}</span></li>
                            <li class="list-group-item bg-black text-white">Code postal: <span class="text-info">{{ app.user.userIdentifier.zipCode }}</span></li>
                            <li class="list-group-item bg-black text-white">Pays</li>
                            <li class="list-group-item bg-black text-white">Adresse Email: <span class="text-info">{{ app.user.userIdentifier.email }}</span></li>
                            <li class="list-group-item bg-black text-white">Date d'inscription: <span class="text-info">{{ app.user.userIdentifier.registrationDate|date('d/m/Y à H\\hi') }}</span></li>
                            <li class="list-group-item bg-black text-white">
                                Compte :
                                <span class="text-info">{{ is_granted('ROLE_ADMIN') ? 'Administrateur' : 'Utilisateur' }}</span>
                        </ul>
                    </div>



                    </div>
                </div>

            </div>

        </div>



    </div>

{% endblock %}


